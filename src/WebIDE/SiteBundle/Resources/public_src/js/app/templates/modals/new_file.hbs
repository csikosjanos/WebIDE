<form class="modal-form form">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">Ã—</a>
        <h3>New File</h3>
    </div>
    <div class="modal-body">
        <div class="control-group">
            <label for="filename">File Name</label>
            <input type="text" id="filename" name="filename" required="true" maxlength="100"/>
        </div>
        <div class="control-group">
            <label for="filetype">File Type</label>
            <select id="filetype" name="filetype" required="true">
                <option value="html">HTML</option>
                <option value="css" >CSS</option>
                <option value="javascript">JavaScript</option>
            </select>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn" id="cancel">Cancel</a>
        <button class="btn btn-primary" id="submit" type="submit">Create</button>
    </div>
</form>